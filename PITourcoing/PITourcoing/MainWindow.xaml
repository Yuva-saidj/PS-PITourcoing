        <Label x:Name="quest" Visibility="Hidden" Content="" Opacity="0.7" FontSize="20" HorizontalAlignment="Center" Margin="30,10,0,230" TextBlock.TextAlignment="Center"  VerticalAlignment="Center" Width="600" Height="50" Foreground="#FFF3F3F3" Background="#FF10108D"/>
